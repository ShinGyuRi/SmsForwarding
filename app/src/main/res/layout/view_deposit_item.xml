<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="depositItem"
            type="com.abercompany.smsforwarding.adapter.DepositDataAdapter.BindingHolder" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2" />

            <Spinner
                android:id="@+id/sp_category"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_drop_down_normal"
                android:entries="@array/category"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:theme="@style/ThemeOverlay.AppCompat.Light"></Spinner>

            <Spinner
                android:id="@+id/sp_to_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_drop_down_normal"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

