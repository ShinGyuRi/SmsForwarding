<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/check_elec_gas"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="전기 가스 정산"
            app:layout_constraintEnd_toStartOf="@+id/check_input_out_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/check_input_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:text="퇴실 날짜 적기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/check_remote_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="리모콘 및 벽지 확인"
            app:layout_constraintStart_toStartOf="@+id/check_elec_gas"
            app:layout_constraintTop_toBottomOf="@+id/check_elec_gas" />

        <CheckBox
            android:id="@+id/check_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="퇴실자 계좌번호"
            app:layout_constraintStart_toStartOf="@+id/check_input_out_date"
            app:layout_constraintTop_toBottomOf="@+id/check_input_out_date" />

        <CheckBox
            android:id="@+id/check_katok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="정산 카톡 날리기"
            app:layout_constraintStart_toStartOf="@+id/check_remote_con"
            app:layout_constraintTop_toBottomOf="@+id/check_remote_con" />

        <CheckBox
            android:id="@+id/check_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TV 체크"
            app:layout_constraintStart_toStartOf="@+id/check_account"
            app:layout_constraintTop_toBottomOf="@+id/check_account" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:text="취소"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/check_katok"
            app:layout_constraintTop_toBottomOf="@+id/check_katok" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:text="확인"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/check_tv"
            app:layout_constraintTop_toBottomOf="@+id/check_tv" />

    </android.support.constraint.ConstraintLayout>
</layout>