<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dlgElec"
            type="com.abercompany.smsforwarding.dialog.ElecDialog"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_room_num"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방번호" />

            <EditText
                android:id="@+id/et_room_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_check_date"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/layout_room_num"
            app:layout_constraintTop_toBottomOf="@+id/layout_room_num">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검침날짜" />

            <EditText
                android:id="@+id/et_check_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:focusable="false" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_elec_num"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/layout_name"
            app:layout_constraintTop_toBottomOf="@+id/layout_name">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계량수치" />

            <EditText
                android:id="@+id/et_elec_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_amount"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/layout_check_date"
            app:layout_constraintTop_toBottomOf="@+id/layout_check_date">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요금" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_status"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/layout_elec_num"
            app:layout_constraintTop_toBottomOf="@+id/layout_elec_num">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상태" />

            <EditText
                android:id="@+id/et_status"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_amount">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                android:text="취소"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="@{dlgElec.onClick}"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                android:text="확인"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="@{dlgElec.onClick}" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>